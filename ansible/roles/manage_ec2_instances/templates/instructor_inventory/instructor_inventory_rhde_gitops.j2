# Generated by the workshop provisioner
{%if run_in_aws is defined and run_in_aws | bool %}
[aws]
edge-manager-aws ansible_host={{ edge_gitops_node_facts.instances[0].public_ip_address }} ansible_user={{ edge_gitops_node_facts.instances[0].tags.username }}
[aws:vars]
{% if ssh_port is defined %}
ansible_port={{ ssh_port }}
{% endif %}
ansible_ssh_private_key_file="{{ workshop_folder }}/ssh-key.pem"
{% endif %}

[edge_remote_management]
{%if run_in_aws is defined and run_in_aws | bool %}
edge-manager-aws ansible_host={{ edge_gitops_node_facts.instances[0].public_ip_address }} ansible_user={{ edge_gitops_node_facts.instances[0].tags.username }}
{% endif %}

{% if attendance %}
[attendance]
{% for host in attendance_host_facts.instances %}
{{ host.tags.short_name }} ansible_host={{ host.public_ip_address }} ansible_user=ec2-user
{% endfor %}
{% endif %}
