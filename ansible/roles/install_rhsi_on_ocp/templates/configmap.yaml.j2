{% for student_number in range(1, student_total + 1) %}
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: skupper-site
  namespace: "student{{ student_number }}-workshop-{{ workshop_type | regex_replace('_', '-') }}"
data:
  name: "student{{ student_number }}-workshop-{{ workshop_type | regex_replace('_', '-') }}-site"
  console: "true"
  console-user: "student{{ student_number }}"
  console-password: "{{ admin_password }}"
  flow-collector: "true"
{% endfor %}